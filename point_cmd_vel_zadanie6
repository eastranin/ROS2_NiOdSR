#!/usr/bin/env python3

import rclpy
from rclpy.node import Node
from geometry_msgs.msg import Point, Twist


class PointCmdVel(Node):
    def __init__(self):
        super().__init__('point_cmd_vel')

        # Parametry
        self.declare_parameter('window_height', 512)
        self.declare_parameter('forward_speed', 0.2)

        self.window_height = self.get_parameter('window_height').value
        self.forward_speed = self.get_parameter('forward_speed').value
        self.center_y = self.window_height / 2

        # Publisher /cmd_vel
        self.cmd_vel_pub = self.create_publisher(Twist, '/cmd_vel', 10)

        # Subscriber /point
        self.point_sub = self.create_subscription(
            Point,
            '/point',
            self.point_callback,
            10
        )

        self.get_logger().info(
            f'PointCmdVel started | center_y = {self.center_y}'
        )

    def point_callback(self, msg: Point):
        twist = Twist()

        if msg.y < self.center_y:
            # Punkt powyżej środka → jedź do przodu
            twist.linear.x = self.forward_speed
            self.get_logger().info(
                f'Point above center (y={msg.y:.1f}) → FORWARD'
            )
        else:
            # Punkt poniżej środka → jedz na dol
            twist.linear.x = -self.forward_speed
            self.get_logger().info(
                f'Point below center (y={msg.y:.1f}) → BACK'
            )

        self.cmd_vel_pub.publish(twist)


def main(args=None):
    rclpy.init(args=args)
    node = PointCmdVel()
    rclpy.spin(node)
    node.destroy_node()
    rclpy.shutdown()


if __name__ == '__main__':
    main()
